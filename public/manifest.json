{
  "description": "hook into requests and modify them",
  "manifest_version": 2,
  "name": "request-hook",
  "version": "1.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["storage", "webRequest", "webRequestBlocking", "<all_urls>"],

  "background": {
    "scripts": ["background.js"]
  }
}
